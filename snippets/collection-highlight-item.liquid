{%- comment -%}
    {%- render 'collection-highlight-item', url: collection.url, image: image, index: forloop.index, title: title -%}
{%- endcomment -%}

<!-- snippets/collection-highlight-item.liquid START -->

<a href="{{ url }}" class="relative flex items-center w-full px-4 py-2 text-gray-900 bg-gray-300 border border-gray-100 shadow-md h-36 rounded-xl md:relative md:flex md:flex-col md:items-center md:justify-start md:p-0 md:m-0 md:border-2 md:border-gray-800 md:border-solid md:rounded-sm md:h-auto">
    <img src="{{ image | img_url: '360x' }}" id="loop-{{ index }}" srcset="{%- render 'responsive-srcset', image: image -%}" class="absolute inset-y-0 right-0 block object-cover w-full h-full p-0 m-0 {%- if section.settings.overlay %} mix-blend-luminosity {%- endif %} rounded-xl md:block md:w-full md:h-full md:max-w-full md:p-0 md:m-0 md:static md:mix-blend-normal md:rounded-none" alt="{{ image.alt }}" loading="lazy" data-sizes="auto" sizes="5px" width="{{ image.width }}" height="{{ image.height }}">
<gradient-overlay class="absolute inset-0 block w-full h-full rounded-lg bg-gradient-to-r from-gray-100 via-gray-100/50 to-transparent md:hidden"> </gradient-overlay>
<span class="relative z-[2] text-2xl font-semibold tracking-wide {{ section.settings.collection_product_title_text_transform }} duration-500 md:text-lg md:block md:w-full md:p-1 md:m-0 md:font-bold md:text-center md:text-gray-50 md:bg-gray-900 md:tracking-wider">{{ title | default: 'No Item Selected' }}</span>
</a>

<!-- snippets/collection-highlight-item.liquid END -->