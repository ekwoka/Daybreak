<script>
    document.addEventListener('alpine:init', () => {
        Alpine.data('toasts',({
            args
        } = {}) => ({
            filler: false,
            get toast() {
                return this.$store.toast.items
            },
            timeout(i){
                let cb = () => {
                    this.$store.toast.items[i].show = true
                    setTimeout(() => {this.$store.toast.items[i].show = false},5000)
                }
                setTimeout(cb,50);
                
            }
        }))
    });
</script>

<div x-data="toasts" x-init="$store.toast.addToast('success','I luv you')">
    <template x-for="(toast,i) in $store.toast.items" :key="i">

        <toast-item :class="toast.show ? 'top-32 opacity-100' : '-top-4 opacity-0'" x-init="timeout(i)">
            <toast-icon :class="{ 'bg-cta-600':[toast.type] == 'success'}">
                <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20 3.33331C10.8 3.33331 3.33337 10.8 3.33337 20C3.33337 29.2 10.8 36.6666 20 36.6666C29.2 36.6666 36.6667 29.2 36.6667 20C36.6667 10.8 29.2 3.33331 20 3.33331ZM16.6667 28.3333L8.33337 20L10.6834 17.65L16.6667 23.6166L29.3167 10.9666L31.6667 13.3333L16.6667 28.3333Z"></path>
                </svg>
            </toast-icon>
            <toast-content>
                <div class="mx-3">
                    <toast-title :class="{ 'text-cta-600':[toast.type] == 'success'}" x-text="toast.type">Success</toast-title>
                    <toast-message x-text="toast.msg">Item was added to Cart</toast-message>
                </div>
            </toast-content>
        </toast-item>
        
    </template>
</div>

<!-- toasts-comp.liquid END -->

